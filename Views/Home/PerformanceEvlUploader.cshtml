    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden; /* 🔒 No scroll */
            font-family: 'Segoe UI', sans-serif;
        }

        /* Full page */
        .fixed-page {
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Top section */
        .top-section {
            flex: 0 0 auto;
            padding: 15px;
            background: linear-gradient(135deg, #e0f2ff, #f9fbff);
        }

        /* Card */
        .upload-card {
            max-width: 750px;
            margin: auto;
            background: white;
            padding: 20px 20px;
            border-radius: 14px;
            box-shadow: 0 12px 35px rgba(0,0,0,0.12);
        }

        .title {
            text-align: center;
            color: #1e88e5;
            margin-bottom: 15px;
        }

        /* Filters */
        .filter-grid {
            display: grid;
            grid-template-columns: repeat(3, 3fr);
            gap: 12px;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: 600;
            font-size: 15px;
            vertical-align: middle;
            text-align: center;
        }

        /* Upload */
        .upload-box {
            border: 2px dashed #1e88e5;
            border-radius: 10px;
            padding: 12px;
            text-align: center;
            margin-bottom: 12px;
            width: 80%;
            font-weight: 600;
        }

        .upload-box {
            border: 2px dashed #1e88e5;
            border-radius: 10px;
            padding: 12px;
            text-align: center;
            margin-bottom: 12px;
            width: 80%;
            font-weight: 600;
        }

        /* Button */
        .btn-upload {
            width: 20%;
            padding: 10px;
            background: linear-gradient(135deg, #1e88e5, #1565c0);
            border: none;
            color: white;
            border-radius: 8px;
            display: block; /* 👈 required */
            margin: 15px auto; /* 👈 centers horizontally */
        }

        /* Loader */
        .loader {
            display: none;
            text-align: center;
            margin-top: 10px;
        }

        /* Bottom image */
        .image-section {
            flex: 1; /* Takes remaining space */
            padding: 10px;
            background: #f5f9ff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .preview-img {
            width: 100%;
            height: 100%;
            object-fit: contain; /* 🔥 fit without scroll */
            border-radius: 10px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

        select {
            height: 32px;
            width: 60px;
            font-weight: bold;
            border-radius: 5px;
        }

        .btn-right {
            float: right;
        }

    </style>
</head>
<body>

    @Html.Partial("_Navbar")
    <div class="fixed-page">

        <!-- TOP SECTION -->
        <div class="top-section">
            <div class="upload-card">
                <button class="btn btn-outline-primary btn-right" onclick="refresh()">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <h2 class="title"> Performance Evaluation Upload </h2>

                @using (Html.BeginForm("PerformanceEvlUploader", "Home", FormMethod.Post,
                    new { id = "form", enctype = "multipart/form-data" }))
                {
                    <div class="filter-grid">

                        <div class="form-group">
                            <label>EmpId</label>

                            <select name="EmpID" id="EmpID" class="form-control emp-search">
                                <option value="All" selected>All</option>

                                @if (ViewBag.EmpIDList != null)
                                {
                                    foreach (System.Data.DataRow row in ViewBag.EmpIDList.Rows)
                                    {
                                        <option value="@row["Emp ID (Paycom)"]">
                                            @row["Emp ID (Paycom)"]
                                        </option>
                                    }
                                }
                            </select>
                        </div>


                        <div class="form-group">
                            <label>Month</label>
                            <select name="Month" class="form-control">
                                <option value="All" selected>All</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Year</label>
                            <select name="Year" class="form-control">
                                @{
                                    int currentYear = DateTime.Now.Year;
                                    int defaultYear = currentYear - 1;
                                }
                                @for (int y = 2021; y <= currentYear; y++)
                                {
                                    <option value="@y" @(y == defaultYear ? "selected" : "")>@y</option>
                                }
                            </select>
                        </div>

                        @*<div class="form-group">
                                <label>Upload Date</label>
                                <input type="date" name="UploadDate" class="form-control" />
                            </div>*@
                    </div>

                    <div class="upload-box">
                        <input type="file" name="file" id="file" />
                        <span>Upload Excel File</span>
                    </div>

                    <button type="submit" id="load" class="btn-upload" disabled>
                        <i class="fa fa-cloud-upload"></i> Upload Report
                    </button>

                    <div id="div_1" class="loader">
                        <img src="~/wwwroot/Spinner.gif" />
                        <span>Uploading, please wait...</span>
                    </div>

                    @*<p class="response" style="color:@ViewBag.Style; text-align:center;">
                            @ViewBag.Message
                        </p>*@
                    <p class="response" style="color:@ViewBag.Style; font-weight:bold;text-align:center;">
                        @if (ViewBag.Style == "green")
                        {
                            <i class="fa fa-check-circle"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle"></i>
                        }
                        @ViewBag.Message
                    </p>

                }
            </div>
        </div>

        <!-- BOTTOM IMAGE SECTION -->
        <div class="image-section">
            <img src="~/wwwroot/PerformanceEvl.png"
                 alt="Sample Screenshot"
                 class="preview-img" />
        </div>

    </div>

    <script>
        document.addEventListener('keydown', function (e) {
            if (e.ctrlKey && e.key === '5') {
                e.preventDefault();
            }
        });

        function refresh() {
            window.location.reload();
        }
    </script>



    <script>
        $(document).ready(function () {
            $('.emp-search').select2({
                placeholder: "search",
                allowClear: true,
                width: '80%'
            });
        });
    </script>
    <script>
        $(function () {
            $('#form').on('submit', function () {
                $('#load').attr('disabled', true);
                $('#div_1').show();
            });
        });

        function En() {
            alert("Upload Complete");
        }

        function sendemail() {
            window.location = 'Home/SendEmail';
            $('#load1').attr('disabled', true);
        }
    </script>

    <script>
        document.getElementById('file').addEventListener('change', function () {
            var fileInput = this;
            var filePath = fileInput.value;
            var allowedExtensions = /(\.xls|\.xlsx)$/i;

            if (!allowedExtensions.exec(filePath)) {
                alert('Please upload only Excel files (.xls or .xlsx).');
                fileInput.value = ''; // Clear the input
                return false;
            }
            $('#load').attr('disabled', false);
        });

        // Optional: Show spinner after validation
        document.getElementById('form').addEventListener('submit', function (e) {
            var fileInput = document.getElementById('file');
            if (!fileInput.value) {
                alert("Please select an Excel file before submitting.");
                e.preventDefault();
                document.getElementById('file').style.display = 'none';
                return false;
            } else {
                document.getElementById('div_1').style.display = 'none';

            }
        });
    </script>
</body>
</html>
