@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password | Secure Access</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        :root {
            --accent-gradient: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #f8f9fa; /* Clean background to make the card pop */
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            /* Subtle animated background pattern */
            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 40%;
                background: var(--accent-gradient);
                z-index: -1;
                border-bottom-left-radius: 50% 20%;
                border-bottom-right-radius: 50% 20%;
            }

        .forgot-card {
            background: #ffffff;
            border: none;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(255, 94, 98, 0.15);
            width: 100%;
            max-width: 420px;
            padding: 40px;
            text-align: center;
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: rgba(255, 153, 102, 0.1);
            color: #ff5e62;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 20px;
        }

        .form-label {
            font-weight: 600;
            color: #444;
            display: block;
            text-align: left;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #eee;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #ff9966;
                box-shadow: none;
            }

        .btn-reset {
            background: var(--accent-gradient);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 700;
            color: white;
            margin-top: 10px;
            transition: transform 0.2s ease;
        }

            .btn-reset:hover {
                transform: scale(1.02);
                color: white;
                box-shadow: 0 8px 20px rgba(255, 94, 98, 0.3);
            }

        .back-link {
            color: #777;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s;
        }

            .back-link:hover {
                color: #ff5e62;
            }

            .back-link i {
                margin-right: 5px;
            }
    </style>
</head>
<body>

    <div class="forgot-card">
        <div class="icon-circle">
            <i class="fa-solid fa-lock-open"></i>
        </div>

        <h3 class="fw-bold mb-2">Forgot Password?</h3>
        <p class="text-muted mb-4">Enter your email and we'll send you a link to reset it.</p>

        <form method="post">
            <div class="mb-4">
                <label class="form-label">Email Address</label>
                <div class="input-group">
                    <input type="email" name="Email" class="form-control text-center" placeholder="e.g. alex@example.com" required />
                </div>
            </div>

            <button type="submit" class="btn btn-reset w-100">
                Send Reset Link
            </button>
        </form>

        <div class="mt-4">
            <a href="@Url.Action("Login","Login")" class="back-link">
                <i class="fa-solid fa-arrow-left"></i> Back to Login
            </a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(function () {
            toastr.options = {
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };

            @if (ViewBag.Message != null) { <text>toastr.success('@ViewBag.Message');</text> }
            @if (ViewBag.Error != null) { <text>toastr.error('@ViewBag.Error');</text> }
        });
    </script>
</body>
</html>